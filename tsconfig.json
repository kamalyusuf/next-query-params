{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": false,
    "baseUrl": ".",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src"]
}
